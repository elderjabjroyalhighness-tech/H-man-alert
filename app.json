{
  "expo": {
    "name": "Human Alert",
    "slug": "human-alert",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "humanalert",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.humanalert.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Show your location for emergency alerts",
        "NSLocationAlwaysUsageDescription": "Track location for emergency safety",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Enable emergency alerts in your area"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.humanalert.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Human Alert to access your location.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "backendUrl": "https://safe-radius.preview.emergentagent.com",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "human-alert"
      }
    }
  }
}
